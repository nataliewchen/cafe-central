<%- layout('/layout/boilerplate') %>
<link rel="stylesheet" href="/css/index.css">

<div class="row justify-content-end">
  <div class="col-6 col-lg-12">
    <div class="mb-3 text-center">
      <h1 class="d-inline fs-2"><%= heading %> </h1>
      <h6 class="text-muted"><%= cafes.length %> Results</h6>
    </div>
  </div>
  <div class="col-3 mt-auto mb-3 d-lg-none">
    <a class="text-decoration-none text-dark float-end" id="toggleOptions"><i class="bi bi-sliders"></i> Refine</a>
  </div>
  <hr>
</div>
</div>



<div class="row">
  <div class="col-12 col-md-4 col-lg-2">
    <div id="options" class="sticky-top d-none d-lg-block mb-2">
      <form action="<%= url %>" method="get" id="sortAndFilter" class="row">
        <div class="card text-center mb-3 options-card">
          <div class="card-header">Sort By</div>
          <select id="sort-by" name="srt" class="w-75 mx-auto my-2">
            <option selected></option>
            <option value="review" <% if(sort === 'review') { %> selected <% } %>>Avg. Review</option>
            <option value="nameAsc" <% if(sort === 'nameAsc') { %> selected <% } %>>Name: A to Z
            </option>
            <option value="nameDes" <% if(sort === 'nameDes') { %> selected <% } %>>Name: Z to A
            </option>
          </select>
        </div>
        <div class="card options-card" id="filters">
          <div class="card-header text-center">Filters</div>

          <ul class="list-group list-group-flush text-center">
            <li class="list-group-item">
              <p class="mb-1">Price</p>
              <div class="btn-group btn-group-sm w-100 mb-2" role="group" aria-label="price filter button group">
                <input type="checkbox" class="btn-check" name="pf" value="1" id="price1" autocomplete="off"
                  <% if (applied.price && applied.price.includes(1)) { %> checked <% } %>>
                <label class="btn btn-outline-secondary w-25" for="price1">$</label>

                <input type="checkbox" class="btn-check" name="pf" value="2" id="price2" autocomplete="off"
                  <% if (applied.price && applied.price.includes(2)) { %> checked <% } %>>
                <label class="btn btn-outline-secondary w-25" for="price2">$$</label>

                <input type="checkbox" class="btn-check" name="pf" value="3" id="price3" autocomplete="off"
                  <% if (applied.price && applied.price.includes(3)) { %> checked <% } %>>
                <label class="btn btn-outline-secondary w-25" for="price3">$$$</label>
              </div>
            </li>
            <li class="list-group-item">
              <p class="mb-1">Category</p>
              <div class="btn-group-vertical w-100 mb-2" role="group" aria-label="category filter button group">
                <input type="checkbox" class="btn-check" name="cf" value="coffee" id="coffee" autocomplete="off"
                  <% if (applied.categories && applied.categories.includes("Coffee")) { %> checked <% } %>>
                <label class="btn btn-outline-secondary" for="coffee">Coffee</label>

                <input type="checkbox" class="btn-check" name="cf" value="boba" id="boba" autocomplete="off"
                  <% if (applied.categories && applied.categories.includes("Boba")) { %> checked <% } %>>
                <label class="btn btn-outline-secondary" for="boba">Boba</label>

                <input type="checkbox" class="btn-check" name="cf" value="bakery" id="Bakery" autocomplete="off"
                  <% if (applied.categories && applied.categories.includes("Bakery")) { %> checked <% } %>>
                <label class="btn btn-outline-secondary" for="Bakery">Bakery</label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="checkbox" name="mult" id="multCat" <% if (applied.mult) { %>
                  checked <% } %>>
                <label class="form-check-label" for="multCat"><small>
                    Only include results that match all of the selected categories</small>
                </label>
              </div>
            </li>
            <li class="list-group item">
              <input class="btn btn-outline-primary w-75 mx-auto mt-2 d-lg-none" type="submit" id="apply" value="Apply">
              <input class="btn btn-outline-danger w-75 mx-auto my-2" type="button" id="reset" value="Reset">
            </li>
          </ul>
        </div>
      </form>
    </div>
  </div>
  <div id="results" class="col-12 col-lg-10">
    <div class="row">
      <% for (let cafe of cafes) { %>
      <div class="col-sm-6 col-md-4 cafe-card d-none resultsColumn">
        <a href="/cafes/<%= cafe.id %>" class="text-decoration-none">
          <div class="card">
            <div class="row g-0 align-items-center">
              <div class="col-5 col-sm-12">
                <img src="<%= cafe.images[0].square %>" class="card-img-top" alt="...">
              </div>
              <div class="col-7 col-sm-12">
                <div class="card-body text-center text-dark">
                  <h5 class="card-title"><%= cafe.name %></h5>
                  <h6 class="card-subtitle mb-2"><%= cafe.cityState %></h6>
                  <p class="card-text"><%- cafe.stars %><%- cafe.reviewLen %> </p>
                  <p class="card-text mt-3"><%= cafe.priceString %> &nbsp;&bull;&nbsp;
                    <% cafe.categories.forEach((cat) => { %>
                    <span class="category"><%= cat %></span> <% }) %></p>
                </div>
              </div>
            </div>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>

</div>
<div id="spinner" class="text-center mb-4 d-none">
  <div class="spinner-border" role="status">
    <span class="visually-hidden">Loading...</span>
  </div>
</div>



<script src="/js/resDesign/indexRes.js"></script>
<script src="/js/infiniteScroll.js"></script>
<script src="/js/resetFilters.js"></script>